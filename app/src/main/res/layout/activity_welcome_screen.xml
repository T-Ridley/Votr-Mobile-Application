<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tridley.android.votrmobileapplication.WelcomeScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/createPollBtn"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:background="@android:color/darker_gray"
            android:fontFamily="sans-serif"
            android:text="Create a Poll"
            android:textSize="18sp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/accessPollBtn"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:background="@android:color/darker_gray"
            android:fontFamily="sans-serif"
            android:text="Access a Poll"
            android:textSize="18sp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/currentPollBtn"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:background="@android:color/darker_gray"
            android:fontFamily="sans-serif"
            android:text="Current Poll(s)"
            android:textSize="18sp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"/>
    </LinearLayout>

</android.widget.RelativeLayout>
