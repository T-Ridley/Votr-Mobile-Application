<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/fadedbar"
    tools:context="tridley.android.votrmobileapplication.activities.PollScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pollTitleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:text="Poll Title"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:id="@+id/questionTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:text="Question"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ansOneBtn"
                android:layout_width="115dp"
                android:layout_height="75dp"
                android:background="@drawable/button_border"
                android:outlineProvider="background"
                android:text="Answer  One"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/ansTwoBtn"
                android:layout_width="115dp"
                android:layout_height="75dp"
                android:background="@drawable/button_border"
                android:text="Answer Two"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ansThreeBtn"
                android:layout_width="115dp"
                android:layout_height="75dp"
                android:background="@drawable/button_border"
                android:text="Answer Three"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/ansFourBtn"
                android:layout_width="115dp"
                android:layout_height="75dp"
                android:background="@drawable/button_border"
                android:text="Answer Four"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/moreInfoTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:text="More Info..."
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

</android.widget.RelativeLayout>
