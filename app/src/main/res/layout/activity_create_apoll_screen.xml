<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fadedbar"
                tools:context="tridley.android.votrmobileapplication.activities.CreateAPollScreen">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <EditText
            android:id="@+id/editTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Title..."
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/editOption1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editTitle"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Option1..."
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/editOption2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editOption1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Option2..."
            android:textColor="@android:color/white" />

        <Switch
            android:id="@+id/addOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editOption2"
            android:text="Add Option"
            android:textAlignment="center"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/pollexpirationsettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Poll Expiration Settings"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/dateInsert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="date"
                android:text="Date"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/timeInsert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="time"
                android:text="Time"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <Button
            android:id="@+id/createPollBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border"
            android:text="Create Poll"
            android:textAlignment="center"
            android:textColor="@android:color/white" />

    </LinearLayout>

</ScrollView>

</RelativeLayout>
